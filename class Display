package term2.week2;

class Display {
	
	private int value;
	private int limit;
	
	public Display(int limit) {
		
		this.limit = limit;
	}
	
	public void increase() {
		value++;
		if( value == limit )
		{
			value = 0;
		}
	}
	
	public void setValue(int i) {
		value = i;
	}
	
	public int getValue() {
		
		return value;
	}

}
